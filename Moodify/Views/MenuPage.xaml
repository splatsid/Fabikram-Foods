<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Moodify.MenuPage" BackgroundColor="Transparent" x:Name="FrameMenu">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="0, 500, 0, 0" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" BackgroundColor="Transparent" HeightRequest="75" Padding="0,75,0,0" >
      <Button x:Name="Home"  Text="Home" TextColor="Black" BackgroundColor="White" Command="{Binding GoHomeCommand}"  />
      <Button  x:Name="Menu" Text="Menu" TextColor="Black" BackgroundColor="White" Command="{Binding GoSecondCommand}" />
      <Button  x:Name="About" Text="About us" TextColor="Black" BackgroundColor ="White" Command="{Binding GoAboutCommand}" />
      <Button   x:Name="Location" Text="Location" TextColor="Black" BackgroundColor ="White" Command ="{Binding GoLocationCommand}" />
      <Button  x:Name="Favourites" Text="Favourites" TextColor="Black" BackgroundColor ="White" Command ="{Binding GoFavouritesCommand}" />
      <Button  x:Name="Cart" Text="Cart" TextColor="Black" BackgroundColor ="White" Command ="{Binding GoCartCommand}" />


    </StackLayout>
  </ContentPage.Content>
</ContentPage>
